<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WhatsApp chats</title>
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <h1>All Chats</h1>
    <form action="/chats/new" method="get">
      <button>New Chat</button>
    </form>
    <br />
    <% for(let chat of chats) { %>
    <div class="chat">
      <p>From: <%= chat.from %></p>
      <div class="msg">
        <p>msg: <i> <%= chat.msg %></i></p>
        <form action="/chats/<%= chat.id %>/edit" method="get">
          <button>Edit</button>
        </form>
      </div>
      <p>Received By: <%= chat.to %></p>
      <hr />
      <p><%= chat.createdAt.toString().split(" ")[4] %></p>
      <p><%= chat.createdAt.toString().split(" ").slice(0,4).join(" ") %></p>
      <hr />
      <br />
      <form action="/chats/<%= chat.id %>?_method=DELETE" method="post">
        <button>Delete</button>
      </form>
    </div>
    <!-- <br /><br /> -->
    <% } %>
  </body>
</html>
