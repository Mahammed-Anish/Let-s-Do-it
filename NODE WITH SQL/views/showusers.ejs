<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Users</title>
    <style>
      table,
      tr,
      td,
      th {
        border: 1px solid black;
      }
    </style>
  </head>
  <body>
    <table>
      <tr>
        <th>Id</th>
        <th>Email</th>
        <th>Username</th>
      </tr>
      <!-- <tr>
        <td>123</td>
        <td>abc@gmail.com</td>
        <td>abc</td>
      </tr> -->
      <% for(let user of result) { %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.username %></td>
        <td>
          <form action="/user/<%= user.id %>/edit" method="get">
            <button>Edit usernmae</button>
          </form>
        </td>
        <td>
          <form action="/user/<%= user.id %>?_method=DELETE" method="post">
            <button>Delete</button>
          </form>
        </td>
      </tr>
      <% } %>
    </table>
    <form action="/user/new" method="get">
      <button>Add User</button>
    </form>
  </body>
</html>
